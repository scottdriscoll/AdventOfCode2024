<div{{ attributes }}>
    <div class="bg-gray-200 p-4 rounded-lg shadow-md" data-controller="solution">
        <h3 class="text-lg font-semibold mb-2">Day {{ day }}</h3>
        <div class="flex mb-2">
            <textarea
                class="border border-gray-300 p-2 w-3/4 mr-4"
                placeholder="Enter your input here"
                data-model="input"
                aria-label="Input for Day {{ day }}"
            ></textarea>
            <div
                class="w-1/2 bg-gray-200 p-2"
                aria-label="Output for Day {{ day }}"
                data-solution-target="output"
            >
                {{ this.output }}
            </div>
        </div>
        <div class="flex space-x-2">
            <twig:Button day="{{ day }}" part="1"/>
            <twig:Button day="{{ day }}" part="2"/>
        </div>
    </div>
</div>

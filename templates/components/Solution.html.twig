<div{{ attributes }}>
    <div class="bg-gray-200 p-4 rounded-lg">
        <h3 class="text-lg font-semibold mb-2">Day {{ day }}</h3>
        <div class="flex mb-2">
            <textarea
                class="border border-gray-300 p-2 w-1/2 mr-4"
                placeholder="Enter your input here"
                data-model="input"
                aria-label="Input for Day {{ day }}"
            ></textarea>
            <div class="w-1/2 bg-gray-200 p-2" aria-label="Output for Day {{ day }}">{{ this.output }}</div>
        </div>
        <div class="flex space-x-2">
            <button
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                data-action="live#action"
                data-live-action-param="run"
                data-live-part-param="1"
                aria-label="Run Day {{ day }} Part 1"
            >Part 1
            </button>
            <button
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                data-action="live#action"
                data-live-action-param="run"
                data-live-part-param="2"
                aria-label="Run Day {{ day }} Part 2"
            >Part 2
            </button>
        </div>
    </div>
</div>

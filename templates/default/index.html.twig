{% extends 'base.html.twig' %}

{% block title %}Advent of Code 2024 - Symfony UX Demo{% endblock %}

{% block body %}
    <header class="text-center text-3xl py-4 bg-gray-200 mb-4">
        Advent of Code 2024 - Symfony UX Demo
    </header>
    <main class="container mx-auto px-4">
        <div class="grid grid-cols-2 gap-4 mb-2">
            {% for solution in solutions %}
                <twig:Solution day="{{ solution.getDay }}"/>
            {% endfor %}
        </div>
    </main>
{% endblock %}
